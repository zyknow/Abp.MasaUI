@namespace Zyknow.Abp.MasaUI.Components
@typeparam TItem

<CascadingValue Value="this" IsFixed>
    @if (Type == ActionType.Dropdown)
    {
        <MMenu OffsetY Disabled="@Disabled">
            <ActivatorContent>
                <MButton Disabled="Disabled" Color="primary"
                         @attributes="@context.Attrs">
                    @ToggleText
                </MButton>
            </ActivatorContent>

            <ChildContent>
                <MList>
                    @ChildContent
                </MList>
            </ChildContent>
        </MMenu>
    }
    else
    {
        @ChildContent
    }
</CascadingValue>